<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="560.0" minWidth="536.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PCB_Analyser.controllers.MainController">
    <MenuBar>
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#file" text="Open Image" />
            <MenuItem mnemonicParsing="false" onAction="#close" text="Close Image" />
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
        </Menu>
        <Menu mnemonicParsing="false" text="Image">
            <MenuItem mnemonicParsing="false" onAction="#parameters" text="Parameters" />
            <MenuItem mnemonicParsing="false" onAction="#analyse" text="Analyse" />
            <MenuItem mnemonicParsing="false" onAction="#visualize" text="Visualize" />
            <MenuItem mnemonicParsing="false" onAction="#details" text="Details" />
            <MenuItem mnemonicParsing="false" onAction="#grayscale" text="Grayscale" />
            <MenuItem mnemonicParsing="false" onAction="#colours" text="Colour Adjustment" />
            <MenuItem mnemonicParsing="false" onAction="#channels" text="Colour Channels" />
            <MenuItem mnemonicParsing="false" onAction="#undo" text="Undo Changes" />
        </Menu>
    </MenuBar>
    <AnchorPane minHeight="536.0" minWidth="536.0">
        <ImageView fx:id="imageView" fitHeight="512.0" fitWidth="512.0" layoutX="12.0" layoutY="12.0"
                   pickOnBounds="true" preserveRatio="true"/>
    </AnchorPane>
</VBox>
